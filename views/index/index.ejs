<% layout('../layout') %>
<% script('/javascripts/index.js') %>
<% stylesheet('/stylesheets/index/index.css') %>

<main>
  <!-- carousel 輪播 -->
  <div id="carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <!-- 內容 -->
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/images/index/carousel/202312_01.jpg" class="d-block w-100" alt="AD_img">
      </div>
      <div class="carousel-item">
        <img src="/images/index/carousel/202312_02.jpg" class="d-block w-100" alt="AD_img">
      </div>
      <div class="carousel-item">
        <img src="/images/index/carousel/202312_03.jpg" class="d-block w-100" alt="AD_img">
      </div>
    </div>
    <!-- 控制器 -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- 產品分類 -->
  <section class="productsBlocks blocks-bg py-5">
    <!-- 標題 -->
    <div class="titleBox py-1">
      <em>Product</em>
      <h2>產品分類</h2>
    </div>
    <!-- 圖片 -->
    <div class="d-flex justify-content-center mt-3">
      <!-- 威士忌區塊 -->
      <div class="Imgblocks m-2 shadow">
        <a href="/products/category/威士忌">
          <img src="/images/index/productsBlocks/whisky.png" class="img-fluid rounded-3" alt="WhiskyBlocks">
          <span class="imgText">┃ 威士忌</span>
          <span class="imgText" style="top: 28px;">┃ Whisky</span>
        </a>
      </div>
      <!-- 白蘭地區塊 -->
      <div class="Imgblocks m-2 shadow">
        <a href="/products/category/白蘭地">
          <img src="/images/index/productsBlocks/Brandy.png" class="img-fluid rounded-3" alt="CongacBlocks">
          <span class="imgText">┃ 白蘭地</span>
          <span class="imgText" style="top: 28px;">┃ Congac</span>
        </a>
      </div>
      <!-- 調烈酒區塊 -->
      <div class="Imgblocks m-2 shadow">
        <a href="/products/category/調烈酒">
          <img src="/images/index/productsBlocks/Spirits.png" class="img-fluid rounded-3" alt="Spirits&BaseBlocks">
          <span class="imgText">┃ 調烈酒</span>
          <span class="imgText" style="top: 28px;">┃ Spirits & Base</span>
        </a>
      </div>
      <!-- 調烈酒區塊 -->
      <div class="Imgblocks m-2 shadow">
        <a href="/products/category/葡萄酒">
          <img src="/images/index/productsBlocks/wine.png" class="img-fluid rounded-3" alt="WineBlocks">
          <span class="imgText">┃ 葡萄酒</span>
          <span class="imgText" style="top: 28px;">┃ Wine</span>
        </a>
      </div>
  </section>

  <!-- 新品上市 -->
  <section>
    <!-- 標題 -->
    <div class="titleBox pt-3">
      <em>New Arrival</em>
      <h2>新品上市</h2>
    </div>
    <!-- 商品 -->
    <div class="row row-cols-1 row-cols-md-5 g-3 pt-3 pb-5 justify-content-center px-5">
      <% newArrivalData.forEach(product => { %>
      <div class="col">
        <a href="/products/<%= product.id %>" class="card text-center shadow border-0" style="height: 100%;">
          <img src="/images/products/<%= product.id %>.png" alt="<%= product.product_name %>" class="card-img-top" style="height: 50%;">
          <div class="card-body d-flex flex-column" style="height: 50%; overflow: hidden;">
            <p class="card-title h5 mb-0"><%= product.product_name %></p>
            <p class="card-text text-muted product-card-text pt-2 h6 mb-0"><%= product.product_name_e %></p>
            <p class="card-text card-price h3 mt-auto">$<%= product.price %></p>
            <del class="card-text text-muted deleted-text h6">市價$<%= product.market_price %></del>
          </div>
        </a>
      </div>
      <% }); %>
    </div>
  </section>

  <!-- 最新消息 -->
